<%= badge_header(@badge) %>
<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>
  <p>
    <%= form.label :name %>
    <%= form.text_field :name, id: :badge_name %>
  </p>

  <p>
    <%= form.label :file %>
    <%= form.text_field :file, id: :badge_file%>
  </p>

  <p>
    <%= form.label :reason %>
    <%= form.text_area :reason %>
  </p>

  <%= form.submit %>
  <%= link_to  "К бейджам", admin_badges_path %>
<% end %>